<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Edit Employee</title>
</head>

<body>
 
 
  
  <div class="container">
      <%- include('../partials/navbar.ejs') %>
      <%- include('../partials/errors',{errors}) %>
      <!--  -->
      <div style="margin-top: 20px; font-weight:bolder; text-align: center;" class="mb-3 col-sm-8 alert alert-primary" role="alert">
        Edit Employee
      </div>
   
      <form style="font-weight:bold ; align-items: center;" action='/employee/<%= result.id  %> /edit' method="post">
        <div class="mb-3 col-sm-8">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" name="name" value="<%= result.name  %> ">
        </div>
        <div class="mb-3 col-sm-8">
          <label  class="form-label">Gender</label>
          <select class="form-select" name="gender" >
            <% let gender = ['Male','Female'] %>
            <% gender.forEach((el) => { %>
              <option value="<%= el %>" <%=  el === result.gender ? 'selected' : ""  %> > <%= el  %> </option>            
            <% }) %> 
            
          </select>
        </div>
        <div class="mb-3 col-sm-8">
          <label  class="form-label">Date of Birth</label>
          <input type="date" class="form-control" name="dateOfBirth" value="<%= result.formatCreatedDate  %> ">
        </div>
        <div class="mb-3 col-sm-8">
          <label  class="form-label">Status</label>
          <!-- <input type="text" class="form-control" name="status"> -->
          <select class="form-select" name="status" >
            <% let status = ['Permanent','Contract'] %> 
             <% status.forEach((el)=>{ %>
               <option value="<%= el %>" <%= el === result.status ? "selected" : "" %> ><%= el  %> </option>

           <%  }) %> 
          </select>
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  














